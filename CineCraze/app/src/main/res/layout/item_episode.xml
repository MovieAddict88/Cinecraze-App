<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/NetflixCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_xs"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="80dp">

        <!-- Episode Thumbnail -->
        <FrameLayout
            android:layout_width="@dimen/episode_thumbnail_width"
            android:layout_height="@dimen/episode_thumbnail_height"
            android:background="@color/netflix_medium_gray">

            <ImageView
                android:id="@+id/episode_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Episode Thumbnail" />

            <!-- Episode Number Badge -->
            <TextView
                android:id="@+id/episode_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="@dimen/spacing_xs"
                android:background="@drawable/episode_number_badge"
                android:paddingStart="@dimen/spacing_xs"
                android:paddingEnd="@dimen/spacing_xs"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/netflix_white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <!-- Play Overlay -->
            <ImageView
                android:id="@+id/play_overlay"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle_outline"
                android:tint="@color/netflix_white"
                android:background="@drawable/play_button_background"
                android:visibility="gone"
                android:contentDescription="Play Episode" />
        </FrameLayout>

        <!-- Episode Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/spacing_sm"
            android:gravity="center_vertical">

            <!-- Episode Title -->
            <TextView
                android:id="@+id/episode_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/NetflixTitle"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp" />

            <!-- Episode Description -->
            <TextView
                android:id="@+id/episode_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textAppearance="@style/NetflixSubtitle"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="1dp" />

            <!-- Episode Duration -->
            <TextView
                android:id="@+id/episode_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textAppearance="@style/NetflixSubtitle"
                android:textSize="10sp"
                android:background="@drawable/metadata_badge"
                android:paddingStart="@dimen/spacing_xs"
                android:paddingEnd="@dimen/spacing_xs"
                android:paddingTop="1dp"
                android:paddingBottom="1dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>