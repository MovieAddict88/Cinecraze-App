<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="242dp"
    android:layout_margin="0dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    
    <ImageView
        android:id="@+id/image_view_profile_nav_header_bg"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholder_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        
    <LinearLayout
        android:background="@drawable/bg_gradient_profile"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:layout_marginTop="80dp"
            android:id="@+id/circle_image_view_profile_nav_header"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/placeholder_profile"
            android:scaleType="centerCrop"
            android:background="@drawable/placeholder_profile"/>
            
        <TextView
            android:id="@+id/text_view_name_nave_header"
            android:textColor="@color/white_text"
            android:textSize="10pt"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CineCraze User" />
            
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white_text"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    </LinearLayout>
</RelativeLayout>