<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/netflix_medium_gray"
        android:contentDescription="Featured Content Background" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hero_gradient_overlay" />

    <!-- Content Overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="@dimen/content_padding_horizontal">

        <!-- Logo/Title Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_md">

            <!-- Featured Badge -->
            <TextView
                android:id="@+id/featured_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured"
                android:textColor="@color/netflix_red"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/netflix_white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:shadowColor="@color/netflix_black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/spacing_xs" />

            <!-- Description -->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/netflix_text_gray"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:shadowColor="@color/netflix_black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_xl">

            <!-- Play Button -->
            <android.widget.Button
                android:id="@+id/btn_play"
                style="@style/NetflixButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:text="Play"
                android:textSize="14sp"
                app:icon="@drawable/ic_play_arrow"
                app:iconGravity="textStart"
                app:iconSize="20dp" />

            <!-- Info Button -->
            <android.widget.Button
                android:id="@+id/btn_info"
                style="@style/NetflixButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_sm"
                android:text="Info"
                android:textSize="14sp"
                android:textColor="@color/netflix_white"
                app:strokeColor="@color/netflix_white"
                app:icon="@drawable/ic_info_outline"
                app:iconTint="@color/netflix_white"
                app:iconGravity="textStart"
                app:iconSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Rating Badge (Top Right) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/spacing_md"
        android:background="@drawable/rating_badge_background"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_xs"
        android:gravity="center">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_star"
            android:tint="@color/gold"
            android:layout_marginEnd="@dimen/spacing_xs" />

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/netflix_white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
