<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Netflix-inspired dark theme -->
    <style name="Theme.CineCraze" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/netflix_red</item>
        <item name="colorPrimaryDark">@color/netflix_red_dark</item>
        <item name="colorAccent">@color/netflix_red</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/netflix_black</item>
        <item name="android:windowBackground">@color/netflix_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/netflix_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <!-- Navigation bar -->
        <item name="android:navigationBarColor" tools:targetApi="21">@color/netflix_black</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/netflix_text_gray</item>
        <item name="android:textColorSecondary">@color/netflix_subtitle_gray</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gold</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="Theme.CineCraze.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/netflix_black</item>
    </style>

    <style name="Theme.CineCraze.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.CineCraze.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/netflix_black</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/netflix_black</item>
    </style>

    <!-- Netflix-style button - Simplified for compatibility -->
    <style name="NetflixButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/netflix_white</item>
        <item name="android:background">@drawable/netflix_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-medium</item>
    </style>

    <!-- Netflix-style card - Simplified -->
    <style name="NetflixCard" parent="CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Text styles -->
    <style name="NetflixTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/netflix_white</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-medium</item>
    </style>

    <style name="NetflixSubtitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/netflix_subtitle_gray</item>
    </style>
</resources>
