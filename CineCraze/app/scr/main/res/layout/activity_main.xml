<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/netflix_black"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Netflix-style Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/netflix_black"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp">

                <!-- Logo -->
                <TextView
                    android:id="@+id/app_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/app_name"
                    android:textColor="@color/netflix_red"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <!-- Search Icon -->
                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/search_icon"
                    android:padding="4dp"
                    android:src="@drawable/ic_search"
                    app:tint="@color/netflix_white" />

                <!-- Profile Icon -->
                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/search_icon"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/profile_icon"
                    android:padding="4dp"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/netflix_white" />

            </RelativeLayout>

            <!-- Search Bar Layout (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@color/netflix_dark_gray"
                android:orientation="horizontal"
                android:padding="8dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxBackgroundColor="@color/netflix_light_gray"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/search_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/search_hint"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/netflix_white"
                        android:textColorHint="@color/netflix_text_gray" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/close_search_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/close_icon"
                    android:padding="8dp"
                    android:src="@drawable/ic_close"
                    app:tint="@color/netflix_white" />
            </LinearLayout>

            <!-- Hero Section / Featured Content Carousel -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="560dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/hero_carousel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Hero Content Overlay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_overlay"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/hero_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/netflix_white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        tools:text="Featured Movie" />

                    <TextView
                        android:id="@+id/hero_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:textColor="@color/netflix_text_gray"
                        android:textSize="16sp"
                        tools:text="An exciting movie description that captures the audience's attention..." />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/hero_play_button"
                            style="@style/NetflixPrimaryButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:text="@string/play"
                            app:icon="@drawable/ic_play_arrow"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/hero_list_button"
                            style="@style/NetflixSecondaryButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="@string/add_to_list"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Category Sections Container -->
            <LinearLayout
                android:id="@+id/categories_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- Trending Now Section -->
                <include
                    android:id="@+id/trending_section"
                    layout="@layout/layout_category_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Popular Movies Section -->
                <include
                    android:id="@+id/popular_section"
                    layout="@layout/layout_category_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Top Rated Section -->
                <include
                    android:id="@+id/top_rated_section"
                    layout="@layout/layout_category_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Continue Watching Section -->
                <include
                    android:id="@+id/continue_watching_section"
                    layout="@layout/layout_category_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Spacer for bottom navigation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Modern Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:background="@color/netflix_black"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

    <!-- Loading Indicator -->
    <FrameLayout
        android:id="@+id/loading_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/netflix_black"
        android:visibility="gone">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <include layout="@layout/layout_shimmer_loading" />

        </com.facebook.shimmer.ShimmerFrameLayout>
    </FrameLayout>

    <!-- Search Results Container -->
    <FrameLayout
        android:id="@+id/search_results_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp"
        android:background="@color/netflix_black"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_results_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />

        <TextView
            android:id="@+id/no_results_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_results"
            android:textColor="@color/netflix_text_gray"
            android:textSize="18sp"
            android:visibility="gone" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
