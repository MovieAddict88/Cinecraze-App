<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/netflix_black"
    tools:context=".DetailsActivity">

    <!-- Hero Section with Collapsing Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:contentScrim="@color/netflix_black"
            app:statusBarScrim="@color/netflix_black"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleEnabled="false">

            <!-- Hero Video Player -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/player_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:controller_layout_id="@layout/custom_exo_player_control_view"
                    app:resize_mode="fit"
                    app:surface_type="texture_view"
                    app:use_artwork="true"
                    app:default_artwork="@drawable/ic_video_placeholder" />

                <!-- Hero Content Overlay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:background="@drawable/hero_gradient_overlay"
                    android:padding="@dimen/content_padding_horizontal">

                    <!-- Hero Title -->
                    <TextView
                        android:id="@+id/hero_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/netflix_white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:shadowColor="@color/netflix_black"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_xl">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_play"
                            style="@style/NetflixButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            android:text="Play"
                            app:icon="@drawable/ic_play_arrow"
                            app:iconGravity="textStart" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_add_to_list"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="My List"
                            android:textColor="@color/netflix_white"
                            app:strokeColor="@color/netflix_white"
                            app:icon="@drawable/ic_add"
                            app:iconTint="@color/netflix_white"
                            app:iconGravity="textStart" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="@color/netflix_white" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content Section -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/netflix_black"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/content_padding_horizontal">

            <!-- Movie Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_lg">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/NetflixTitle"
                    android:textSize="24sp"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <!-- Metadata row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/NetflixSubtitle"
                        android:background="@drawable/metadata_badge"
                        android:paddingStart="@dimen/spacing_sm"
                        android:paddingEnd="@dimen/spacing_sm"
                        android:paddingTop="@dimen/spacing_xs"
                        android:paddingBottom="@dimen/spacing_xs" />

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:textAppearance="@style/NetflixSubtitle"
                        android:background="@drawable/metadata_badge"
                        android:paddingStart="@dimen/spacing_sm"
                        android:paddingEnd="@dimen/spacing_sm"
                        android:paddingTop="@dimen/spacing_xs"
                        android:paddingBottom="@dimen/spacing_xs" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <RatingBar
                        android:id="@+id/rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:theme="@style/RatingBar"
                        android:numStars="5"
                        android:stepSize="0.1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/NetflixSubtitle"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

            <!-- Season Selector for TV Series -->
            <LinearLayout
                android:id="@+id/season_selector_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/section_header_margin_bottom"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seasons"
                    android:textAppearance="@style/NetflixTitle"
                    android:textSize="18sp"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/season_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false" />
            </LinearLayout>

            <!-- Episode Selector for TV Series -->
            <LinearLayout
                android:id="@+id/episode_selector_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/section_header_margin_bottom"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Episodes"
                    android:textAppearance="@style/NetflixTitle"
                    android:textSize="18sp"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/episode_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>

            <!-- Related Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_xl">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="More Like This"
                    android:textAppearance="@style/NetflixTitle"
                    android:textSize="18sp"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/related_content_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
