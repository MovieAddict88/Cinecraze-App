<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Netflix-inspired dark theme -->
    <style name="Theme.CineCraze" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/netflix_red</item>
        <item name="colorPrimaryVariant">@color/netflix_red_dark</item>
        <item name="colorOnPrimary">@color/netflix_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/netflix_red</item>
        <item name="colorSecondaryVariant">@color/netflix_red_dark</item>
        <item name="colorOnSecondary">@color/netflix_white</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/netflix_black</item>
        <item name="colorSurface">@color/netflix_dark_gray</item>
        <item name="colorOnSurface">@color/netflix_text_gray</item>
        <item name="colorOnBackground">@color/netflix_text_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/netflix_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Navigation bar -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/netflix_black</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/netflix_text_gray</item>
        <item name="android:textColorSecondary">@color/netflix_subtitle_gray</item>
        <!-- Card view styling -->
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gold</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="Theme.CineCraze.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorPrimary">@color/netflix_black</item>
        <item name="colorOnPrimary">@color/netflix_white</item>
    </style>

    <style name="Theme.CineCraze.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="Theme.CineCraze.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Netflix-style button -->
    <style name="NetflixButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/netflix_white</item>
        <item name="backgroundTint">@color/netflix_red</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Netflix-style card -->
    <style name="NetflixCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Text styles -->
    <style name="NetflixTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/netflix_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NetflixSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/netflix_subtitle_gray</item>
    </style>
</resources>
