<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Netflix-inspired dark theme for night mode -->
    <style name="Theme.CineCraze" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (Netflix Red) -->
        <item name="colorPrimary">@color/netflix_red</item>
        <item name="colorPrimaryVariant">@color/netflix_dark_red</item>
        <item name="colorOnPrimary">@color/netflix_white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/netflix_red</item>
        <item name="colorSecondaryVariant">@color/netflix_dark_red</item>
        <item name="colorOnSecondary">@color/netflix_white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/netflix_black</item>
        <item name="colorSurface">@color/netflix_dark_gray</item>
        <item name="colorOnSurface">@color/netflix_white</item>
        <item name="colorOnBackground">@color/netflix_white</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/netflix_black</item>
        <item name="android:navigationBarColor">@color/netflix_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/netflix_white</item>
        <item name="android:textColorSecondary">@color/netflix_text_gray</item>
        
        <!-- Window flags for immersive experience -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/netflix_text_gray</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="Theme.CineCraze.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorSurface">@color/netflix_black</item>
        <item name="colorOnSurface">@color/netflix_white</item>
    </style>

    <style name="Theme.CineCraze.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorSurface">@color/netflix_dark_gray</item>
        <item name="colorOnSurface">@color/netflix_white</item>
    </style>

    <style name="Theme.CineCraze.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/netflix_black</item>
        <item name="android:navigationBarColor">@color/netflix_black</item>
    </style>
    
    <!-- Netflix-style button themes -->
    <style name="NetflixPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/netflix_red</item>
        <item name="android:textColor">@color/netflix_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">4dp</item>
    </style>
    
    <style name="NetflixSecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/netflix_light_gray</item>
        <item name="android:textColor">@color/netflix_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">4dp</item>
    </style>
    
    <!-- Netflix-style card theme -->
    <style name="NetflixCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/netflix_gray</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>